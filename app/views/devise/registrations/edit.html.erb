<ul class="breadcrumbs">
  <li><a href="/">Home</a></li>
  <li class="current"><a href="/users/edit">Edit User</a></li>
</ul

<div class="row">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <fieldset class="search_field">
    <div class="home_search">
      <h5>Edit User</h5>
    </div>

    <%= f.error_notification %>

    <div class="home_search">
      <%= f.input :username, :required => true, :autofocus => true, label_html: { class: 'search_label' } %>
      <%= f.input :email, :required => true, label_html: { class: 'search_label' } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, label_html: { class: 'search_label' } %>
      <%= f.input :password_confirmation, :required => false, label_html: { class: 'search_label' } %>
      <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, label_html: { class: 'search_label' } %>
      <div class="search_button"><%= f.button :submit, "Update" %></div>
    </div>

  </fieldset>
<% end %>
</div>

<div class="devise_links">
<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
</div>
