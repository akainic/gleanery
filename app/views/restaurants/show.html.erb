<ul class="breadcrumbs">
  <li><a href="/">Home</a></li>
  <li><a href="/restaurants">Restaurants</a></li>
  <li class="current"><a href="#"><%= @restaurant.name %></a></li>
</ul>

<div class="restaurant_info">
  <ul>
    <li><%= @restaurant.name %></li>
    <li><%= @restaurant.neighborhood %></li>
  </ul>
</div>

<div class="row">
  <%= simple_form_for [@restaurant, @rating] do |f| %>
    <div class="small-4 large-3 columns">
    <%= @restaurant.vegan_rating %>
    <%= f.input :vegan, as: :radio_buttons, collection: [['Vegan friendly', 1], ['Not vegan friendly', 0]]  %>
    </div>
    <div class="small-4 large-3 columns">
    <%= @restaurant.vegetarian_rating %>
    <%= f.input :vegetarian, as: :radio_buttons, collection: [['Vegetarian friendly', 1], ['Not vegetarian friendly', 0]]  %>
    </div>
    <div class="small-4 large-3 columns">
    <%= @restaurant.gluten_free_rating %>
    <%= f.input :gluten_free, as: :radio_buttons, collection: [['Gluten-free friendly', 1], ['Not gluten-free friendly', 0]]  %>
    </div>
    <div class="large-2 columns">
    <%= f.button :submit, 'Rate' %>
    </div>
  <% end %>
</div>

<div>
  <% if user_signed_in? %>
    <%= simple_form_for [@restaurant, @comment] do |f| %>
      <fieldset>
        <div class="home_search">
          <h5>Post comment</h5>
        </div>
        <%= f.error_notification %>

        <div class="home_search">
          <%= f.input :comment, :required => true, :autofocus => true %>
        </div>

        <div class="home_search">
          <%= f.button :submit, 'Submit' %>
        </div>
      </fieldset>
    <% end %>

  <% else %>

    <ul>
      <li><%= link_to 'Sign in', new_user_session_path %> to comment</li>
      <li>Not yet registered with Gleanery? <%= link_to 'Sign up', new_user_registration_path%></li>
    </ul>

  <% end %>
</div>

<div class="row">
  <% @restaurant.comments.each do |comment| %>
    <% unless comment.user == nil %>
      <ul class="comments_header">
        <li><%= comment.user.username %></li>
        <li>|</li>
        <li><%= comment.updated_at %></li>
      </ul>
      <ul class="comments_content">
        <li><%= comment.comment %></li>
      </ul>
    <% end %>
  <% end %>
</div>
